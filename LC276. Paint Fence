// method 1:

class Solution {
    public int numWays(int n, int k) {
        if(n == 0) return 0;
        if(n == 1) return k;
        int same = 0, diff = k, total = k;
        
        for(int i=2; i<=n; i++) {
            same = diff;
            diff = (k-1)*total;
            total = same + diff;
        }
        
        return total;
    }
}

// time: O(n);
// space: O(1);



// method 2:

class Solution {
    public int numWays(int n, int k) {
        if(n == 0) return 0;
        if(n == 1) return k;
        
        int m1 = k;
        int m2 = k*k;
        for(int i=2; i<n; i++) {
            int tmp = (m2 + m1) * (k - 1);
            m1 = m2;
            m2 = tmp;
        }
        return m2;
    }
}

// time: O(n);
// space: O(1);
